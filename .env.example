# Port
PORT=3000

# Database (MySQL for production, SQLite for development)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASS=
DB_NAME=lab_ai_db
# For development with SQLite:
DB_TYPE=better-sqlite3
DB_DATABASE=./lab_ai_dev.sqlite

# JWT
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRES_IN_SECONDS=900
JWT_REFRESH_SECRET=your-refresh-secret-change-in-production
JWT_REFRESH_EXPIRES_IN_SECONDS=604800

# Magic Link
MAGIC_LINK_EXPIRY_SECONDS=900
BACKEND_URL=http://localhost:3000/api
EMAIL_FROM=noreply@lab-ai.com

# SMTP (for email sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# OAuth - Google (get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# OAuth - LinkedIn (get from https://www.linkedin.com/developers/)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=http://localhost:3000/api/auth/linkedin/callback

# Session (for LinkedIn OpenID Connect)
SESSION_SECRET=your-session-secret-change-in-production

# Frontend
FRONTEND_URL=http://localhost:5173

# AI Services
GEMINI_API_KEY=your-gemini-api-key

# Node environment
NODE_ENV=development